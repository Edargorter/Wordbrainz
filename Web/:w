<!doctype html>
<html>
<head>
<style>

body {
	background-color: white;
	color: black;
}

<!-- :D -->
.dark-mode {
	background-color: black;
	color: white;
}

</style>
</head>
<body>

<button onclick="dark_mode()">

<script src="grid.js">create_grid();</script>

<script>
function dark_mode(){
	document.body.classList.toggle("dark-mode");
}
</script>

<div style="margin-top: 20%">
<center>
	<canvas id="canvas" width="320px" height="320px"></canvas>
</center>
</div>

<script>

//Inspired by: http://output.jsbin.com/aralik/2

var canvas = document.getElementById("canvas");
var w = window.innerWidth;
var h = window.innerHeight;

c = canvas.getContext("2d");

let side = 8;
let cell_size = 40;

canvas.addEventListener('click', handle_click);
canvas.addEventListener('mousemove', handle_click);

function draw_grid() {
  c.beginPath();
  c.fillStyle = "white";
  c.lineWidth = 3;
  c.strokeStyle = "black";
  for (var row = 0; row < side; row++) {
    for (var column = 0; column < side; column++) {
      var x = column * cell_size;
      var y = row * cell_size;
      c.rect(x, y, cell_size, cell_size);
      c.fill();
      c.stroke();
    }
  }
  c.closePath();
}

function handle_click(e) {
	c.fillStyle = "black";
	c.fillRect(Math.floor(e.offsetX / cell_size) * cell_size, Math.floor(e.offsetY / cell_size) * cell_size, cell_size, cell_size);
}

draw_grid();

</script>

</body>
</html>
